<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eventivities.android" >
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/><!-- GPS  satelital-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/><!-- GPS por RED-->
    <!--<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>--><!-- GPS para DEBUG-->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Acceso a Internet -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LocalesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eventivities.android.VerComentariosActivity"
            android:label="@string/title_activity_ver_comentarios" >
        </activity>
        <activity
            android:name="com.eventivities.android.MiPerfilActivity"
            android:label="@string/title_activity_mi_perfil" >
        </activity>
        <activity
            android:name="com.eventivities.android.EventosActivity"
            android:label="@string/title_activity_eventos" >
        </activity>
        <activity
            android:name="com.eventivities.android.VotarActivity"
            android:label="@string/title_activity_votar" >
        </activity>
        <activity
            android:name="com.eventivities.android.UbicacionActivity"
            android:label="@string/title_activity_ubicacion" >
        </activity>
        <activity
            android:name="com.eventivities.android.DetalleEventoActivity"
            android:label="@string/title_activity_detalle_evento" >
        </activity>
        <activity
            android:name="com.eventivities.android.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="com.eventivities.android.RutaActivity"
            android:label="@string/title_activity_rutas" >
        </activity>
    </application>

</manifest>
